<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#cfd8dc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="46dp"
        android:text="Elige el tipo de ecuación cinética"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorAccent"></Spinner>

    <Button
        android:id="@+id/show1"
        style="@android:style/Widget.DeviceDefault.Button"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:layout_marginBottom="91dp"
        android:onClick="ShowMe"
        android:text="Continuar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="226dp"
        android:layout_height="28dp"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="78dp"
        android:layout_marginRight="78dp"
        android:text="Fase de la reacción"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/SpinnerPhaseR"
        android:layout_width="244dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="215dp" />

    <TextView
        android:id="@+id/txtShowPhase"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:layout_below="@+id/show1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="57dp"
        android:text="Phase"
        android:textSize="24sp" />

</RelativeLayout>